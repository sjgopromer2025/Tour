
function drawBar(word,fre)
{
	var chart = $('#container_graph').highcharts();
	
	wordarr = word.split(",");
	frearr = fre.split(',').map(Number);
	 
	wordarr.pop();
	frearr.pop();
	
	if (chart) 
	{
	 // 차트가 있을경우 제거한다.
		chart.destroy();
	}
    // 도넛 그래프
	var chart = { type: 'column'};
	
	var title = { text: 'Historic World Population by Region'  };
	
    var xAxis = {
    		categories: wordarr,
    };
    
    var series= [{
        name: 'Year 1800',
        data: frearr
       }];    
    
    var yAxis = {
	      min: 0,
	      title: {
    	  text: 'Population (millions)',
          align: 'high'
	      },
	labels: {
         overflow: 'justify'
	}
    };
    
    
    var json = {};   
    json.chart = chart; 
    json.title = title;   
    json.xAxis = xAxis;
    json.yAxis = yAxis;  
    json.series = series;
    $('#container_graph').highcharts(json);
    
    
}
